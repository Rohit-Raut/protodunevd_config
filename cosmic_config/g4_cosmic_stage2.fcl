#include "services_protodunevd.fcl"
#include "services_refactored_pdune.fcl"
#include "LArG4_dune.fcl"
#include "IonAndScint_dune.fcl"
#include "PDFastSim_dune.fcl"

process_name:G4CosmicStage2
services:
{
    TFileService:               {fileName: "g4_protodunevd_stage2_hist.root"}
    TimeTracker:                @local::dune_time_tracker
    MemoryTracker:              @local::dune_memory_tracker
    RandomNumberGenerator:      {}
    @table::protodunevd_simulation_services
    @table::protodune_larg4_services
    NuRandomService:            @local::dune_prod_seedservice
}

source:
{
    module_type: RootInput
    maxEvents: 10
    fileNames: ["/exp/dune/app/users/rraut/vd_cosmic/genie_config/gen_cosmic__stage1_g4.root"]
}

physics:
{
    producers:
    {
        rns:                {module_type:"RandomNumberSaver"}
        IonAndScint:        @local::protodunevd_ionandscint
    }
    analyzers:              {}
    simulate:               [IonAndScint, rns]
    stream1:                [out1]
    trigger_paths:          [simulate]
    end_paths:              [stream1]

}
outputs:
{
    out1:
    {
        module_type:        RootOutput
        fileName:           "%ifb_stage2_g4.root"
        dataTier:           "simulated"
        outputCommands:      ["keep *"]
        compressionLevel:   1
    }
}